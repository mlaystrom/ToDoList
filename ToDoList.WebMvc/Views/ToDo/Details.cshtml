@model ToDoDetail

@{
    ViewData["Title"] = "ToDo Detail";
}

<h1 class="">Details</h1>
<hr>

@if (Model == null)
{
    <p>ToDo item not found.</p>
}
else
{
<dl class="row">
   <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FinishByDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FinishByDate)
    </dd>
</dl>
}

<div class="col d-flex vstack gap-2 col-md-2" style="text-align: center">
     <a asp-action="Index" class="btn btn-link">Return to List</a>
</div>