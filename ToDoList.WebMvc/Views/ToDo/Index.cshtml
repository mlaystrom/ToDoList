@model List<ToDoList.Models.ToDo.ToDoListItem>

@{
    ViewData["Title"] = "ToDo Index";
}

<h1>ToDo List</h1>
<p>
    <a asp-action="Create">Add A Task</a>
</p>
<div class="mt-5 p-3 border p-4 mt-5" >
  <h2>Task Managment: My Comprehensive ToDo List</h2>  
  <hr>
  
  @foreach (var ToDoListItem in Model)
  {
    <div>
        <h3>@ToDoListItem.Description</h3>
        <p>Category: @ToDoListItem.Category</p>
        <p>Date Finished: @ToDoListItem.FinishByDate</p>
        <hr>
    </div>
  }