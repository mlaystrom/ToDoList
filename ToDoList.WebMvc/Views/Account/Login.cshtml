@model ToDoList.Models.User.UserLogin /* indicates that the view will work with instances of the ReaderLogin class, located at ToDoList.Models.User namespace */


@{
    ViewData["Title"] = "Login";
}

<h1>Log In</h1>
<div class="mt-5 p-3" style="border:2px solid gray;">
    <form asp action="Login" method="post">
        <div class="form-floating mb-2">
            <input type="text" class="form-control mt-3" asp-for="UserName" placeholder="Username">
            <label asp-for="UserName"></label>
             <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-2">
            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
            <label asp-for="Password"></label>
             <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="d-flex flex-column col-md-1 mx-auto">
            <button type="submit" class="btn btn-outline-primary btn-lg">Log in</button>
        </div>

    </form>
</div>