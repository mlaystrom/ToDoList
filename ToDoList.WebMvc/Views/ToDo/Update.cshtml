@model ToDoUpdate

@{
    ViewData["Title"] = "Update ToDo";
}

<h1>Update ToDo Task</h1>
<hr>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Update" method="post">
    <input asp-for="Id" hidden>
    <input asp-for="CategoryId" hidden>
      <div class = "col-md-6 form-floating mb-2">
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
        <label asp-for="Description" class="form-label"></label>
     </div>
       <div class = "col-md-6 form-floating mb-2">
        <input asp-for="FinishByDate" class="form-control" placeholder="FinishByDate">
        <span asp-validation-for="FinishByDate  " class="text-danger"></span>
        <label asp-for="FinishByDate" class="form-label"></label>
     </div>
     <div class="d-flex">
        <input type="submit" value="Update" class="btn btn-outline-primary btn-lg">
        <a asp-action="Index" class="btn btn-link">Return to List</a>
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}